<html>
<%= form_for @safety_report do |f| %>
<input list="Tasks" name="task" >
<datalist id="Tasks">
    <option value="Driving a truck">
    <option value="Lifting">
    <option value="Jackhammer work">
</datalist>
<br />
<br />
<%= select_tag :hazard, options_for_select(['Fall', 'Fire', 'Electrocution']) %>
<br />
<%= select_tag :control, options_for_select(['Wear a harness', 'Wear rubber gloves', 'Wear helmet']) %>
<br />
<%= f.submit %>
<% end %>

</html>
