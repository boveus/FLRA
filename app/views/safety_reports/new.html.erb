<html>
<%= form_for @safety_report do |f| %>
<input name="safety_report[severity_value]" type="range" list="tickmarks"/>
  <datalist id="tickmarks">
    <option value="0" label="0">
    <option value="10">
    <option value="20">
    <option value="30">
    <option value="40">
    <option value="50" label="50">
    <option value="60">
    <option value="70">
    <option value="80">
    <option value="90">
    <option value="100" label="100">
  </datalist>
<br />
<br />
<input list="Tasks" name="task" >
<datalist id="Tasks">
    <option value="Driving a truck">
    <option value="Lifting">
    <option value="Jackhammer work">
</datalist>
<br />
<br />
<%= select_tag :hazard, options_for_select(["Electrical", "Fire", "Injury"]) %>
<br />
<%= select_tag :control, options_for_select(["Rubber Gloves", "Respirator", "Eye protection"]) %>
<br />
<%= f.submit %>
<% end %>

</html>
